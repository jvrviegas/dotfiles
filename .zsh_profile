lintersStatus() {
    echo "ESLint \t"
    eslint_d status
    echo "\n"
    echo "Prettier \t"
    prettierd status
}

lintersRestart() {
    echo "Cleaning linters..."
    eslint_d restart
    prettierd restart
    echo "Linters cleaned..."
}
