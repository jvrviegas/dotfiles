#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
  echo "$selected"
else
  selected=$(fd . ~/Projects --min-depth 1 --max-depth 5 --type d | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

# Merge current dir and parent dir names to prevent collisions
# when trying to create a session from a folder with the same name
parent_dir=$(basename "$(dirname "$selected")")
current_dir=$(basename "$selected")
selected_name=$(echo "${parent_dir}_${current_dir}" | tr . _)

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -ds $selected_name -c $selected
  tmux send-keys -t $selected_name 'tmux-create-dev-windows' C-m
  tmux send-keys -t $selected_name 'clear' C-m
  tmux attach-session -t $selected_name
  exit 0
fi

if ! tmux has-session -t $selected_name 2> /dev/null; then
  tmux new-session -ds $selected_name -c $selected
  tmux send-keys -t $selected_name 'tmux-create-dev-windows' C-m
  tmux send-keys -t $selected_name 'clear' C-m
fi

if [[ -z $TMUX ]]; then
  tmux attach-session -t $selected_name
else
  tmux switch-client -t $selected_name
fi

